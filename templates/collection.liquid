{% comment %}
  Collection Template
{% endcomment %}

<div class="collection-page" style="background-color: #050505; padding: 60px 20px;">
  <div class="page-width">
    
    <div class="collection-header" style="text-align: center; margin-bottom: 60px;">
      <h1 style="color: #D2D2D2; font-size: 56px; font-weight: 300; margin: 0 0 20px; text-transform: uppercase; letter-spacing: 4px;">
        {{ collection.title }}
      </h1>
      {% if collection.description != blank %}
        <div style="color: #767676; font-size: 16px; max-width: 800px; margin: 0 auto; line-height: 1.8;">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>

    {% if collection.products_count > 0 %}
      <div class="collection-filters" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 50px; flex-wrap: wrap; gap: 20px;">
        <div style="display: flex; gap: 20px; flex-wrap: wrap;">
          <button class="filter-btn active" style="background: none; border: none; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; cursor: pointer; padding: 10px 0; border-bottom: 2px solid #D2D2D2;">
            All
          </button>
          <button class="filter-btn" style="background: none; border: none; color: #767676; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; cursor: pointer; padding: 10px 0; border-bottom: 2px solid transparent;">
            New Arrivals
          </button>
        </div>
        <select class="sort-select" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; padding: 10px 20px; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; cursor: pointer; outline: none;">
          <option>Sort By</option>
          <option>Price: Low to High</option>
          <option>Price: High to Low</option>
          <option>Newest First</option>
        </select>
      </div>

      <div class="products-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 40px; max-width: 1400px; margin: 0 auto;">
        {% for product in collection.products %}
          <div class="product-card" style="text-align: center;">
            <a href="{{ product.url }}" style="text-decoration: none; color: inherit;">
              <div class="product-image" style="position: relative; margin-bottom: 20px; background: #141414; border-radius: 10px; aspect-ratio: 1; overflow: hidden;">
                {% if product.featured_image %}
                  <img src="{{ product.featured_image | img_url: '600x600' }}" 
                       alt="{{ product.title }}" 
                       style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s;">
                {% else %}
                  <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #767676;">
                    No Image
                  </div>
                {% endif %}
              </div>
              <h3 class="product-name" style="color: #D2D2D2; font-size: 14px; font-weight: 300; margin: 0 0 10px; text-transform: uppercase; letter-spacing: 1px;">
                {{ product.title }}
              </h3>
              <div class="product-price" style="color: #767676; font-size: 16px;">
                {% if product.compare_at_price > product.price %}
                  <span style="text-decoration: line-through; color: #767676; margin-right: 10px; opacity: 0.6;">
                    {{ product.compare_at_price | money }}
                  </span>
                {% endif %}
                <span>{{ product.price | money }}</span>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div style="text-align: center; padding: 80px 20px;">
        <p style="color: #767676; font-size: 18px;">
          No products found in this collection.
        </p>
      </div>
    {% endif %}

  </div>
</div>

<style>
  .product-card:hover .product-image img {
    transform: scale(1.05);
  }
  .filter-btn:hover {
    color: #D2D2D2 !important;
    border-bottom-color: #D2D2D2 !important;
  }
  .sort-select:focus {
    border-color: rgba(125,125,125,0.7) !important;
  }
</style>

