{% comment %}
  404 Error Page Template
{% endcomment %}

<div class="error-page" style="background-color: #000; padding: 100px 20px; min-height: 80vh; display: flex; align-items: center; justify-content: center; text-align: center;">
  <div class="page-width">
    <h1 style="color: #fff; font-size: 120px; font-weight: 300; margin: 0 0 30px; text-transform: uppercase; letter-spacing: 4px; line-height: 1;">
      404
    </h1>
    <h2 style="color: #fff; font-size: 36px; font-weight: 300; margin: 0 0 20px; text-transform: uppercase; letter-spacing: 2px;">
      Page Not Found
    </h2>
    <p style="color: #888; font-size: 18px; line-height: 1.8; margin: 0 0 40px; max-width: 600px; margin-left: auto; margin-right: auto;">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <div style="display: flex; gap: 20px; justify-content: center; flex-wrap: wrap;">
      <a href="{{ routes.root_url }}" 
         style="display: inline-block; padding: 15px 40px; background: #fff; border: 2px solid #fff; color: #000; text-decoration: none; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; transition: all 0.3s;">
        Go Home
      </a>
      <a href="{{ routes.collections_url }}" 
         style="display: inline-block; padding: 15px 40px; background: transparent; border: 2px solid #fff; color: #fff; text-decoration: none; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; transition: all 0.3s;">
        Shop Now
      </a>
    </div>
  </div>
</div>

<style>
  .error-page a:hover {
    opacity: 0.8;
  }
  
  @media (max-width: 768px) {
    .error-page h1 {
      font-size: 80px !important;
    }
    .error-page h2 {
      font-size: 24px !important;
    }
  }
</style>

