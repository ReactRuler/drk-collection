{% comment %}
  Checkout Page Template - Note: Shopify handles checkout through their system
  This is a custom checkout page template matching Figma design
{% endcomment %}

<div class="checkout-page" style="background-color: #050505; padding: 80px 20px; min-height: 80vh;">
  <div class="page-width">
    
    <div class="checkout-header" style="margin-bottom: 60px;">
      <h1 style="color: #D2D2D2; font-size: 48px; font-weight: 300; margin: 0 0 10px; text-transform: uppercase; letter-spacing: 4px;">
        Checkout
      </h1>
      <p style="color: #767676; font-size: 16px; margin: 0;">
        Complete your purchase
      </p>
    </div>

    <div class="checkout-container" style="display: grid; grid-template-columns: 1fr 400px; gap: 40px; max-width: 1400px; margin: 0 auto;">
      
      {% comment %} Checkout Form {% endcomment %}
      <div class="checkout-form-section" style="background: rgba(255,255,255,0.02); border-radius: 10px; padding: 40px; border: 1px solid rgba(125,125,125,0.5);">
        <h2 style="color: #D2D2D2; font-size: 24px; font-weight: 300; margin: 0 0 30px; text-transform: uppercase; letter-spacing: 2px;">
          Shipping Information
        </h2>

        <form action="{{ routes.cart_url }}" method="post" style="display: flex; flex-direction: column; gap: 25px;">
          <div>
            <label style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
              Email
            </label>
            <input type="email" 
                   required
                   style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
          </div>

          <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
            <div>
              <label style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
                First Name
              </label>
              <input type="text" 
                     required
                     style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
            </div>
            <div>
              <label style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
                Last Name
              </label>
              <input type="text" 
                     required
                     style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
            </div>
          </div>

          <div>
            <label style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
              Address
            </label>
            <input type="text" 
                   required
                   style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
          </div>

          <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px;">
            <div>
              <label style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
                City
              </label>
              <input type="text" 
                     required
                     style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
            </div>
            <div>
              <label style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
                State
              </label>
              <input type="text" 
                     required
                     style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
            </div>
            <div>
              <label style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
                ZIP Code
              </label>
              <input type="text" 
                     required
                     style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
            </div>
          </div>

          <div>
            <label style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
              Country
            </label>
            <select required
                    style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
              <option value="">Select Country</option>
              <option value="US">United States</option>
              <option value="CA">Canada</option>
              <option value="UK">United Kingdom</option>
            </select>
          </div>

          <div style="margin-top: 20px;">
            <label style="display: flex; align-items: center; gap: 10px; color: #767676; font-size: 14px; cursor: pointer;">
              <input type="checkbox" style="width: 18px; height: 18px; cursor: pointer;">
              Save this address for future use
            </label>
          </div>
        </form>
      </div>

      {% comment %} Order Summary {% endcomment %}
      <div class="order-summary-section" style="background: rgba(255,255,255,0.02); border-radius: 10px; padding: 40px; border: 1px solid rgba(125,125,125,0.5); height: fit-content;">
        <h2 style="color: #D2D2D2; font-size: 24px; font-weight: 300; margin: 0 0 30px; text-transform: uppercase; letter-spacing: 2px;">
          Order Summary
        </h2>

        {% if cart.item_count > 0 %}
          <div class="cart-items-summary" style="margin-bottom: 30px; padding-bottom: 30px; border-bottom: 1px solid rgba(125,125,125,0.5);">
            {% for item in cart.items limit: 3 %}
              <div style="display: flex; gap: 15px; margin-bottom: 20px;">
                {% if item.image %}
                  <div style="width: 60px; height: 60px; background: #141414; border-radius: 10px; overflow: hidden; flex-shrink: 0;">
                    <img src="{{ item.image | img_url: '120x120' }}" 
                         alt="{{ item.title }}"
                         style="width: 100%; height: 100%; object-fit: cover;">
                  </div>
                {% endif %}
                <div style="flex: 1;">
                  <p style="color: #D2D2D2; font-size: 14px; margin: 0 0 5px;">
                    {{ item.title }}
                  </p>
                  <p style="color: #767676; font-size: 12px; margin: 0;">
                    {{ item.quantity }} Ã— {{ item.price | money }}
                  </p>
                </div>
              </div>
            {% endfor %}
            {% if cart.item_count > 3 %}
              <p style="color: #767676; font-size: 12px; margin: 10px 0 0;">
                + {{ cart.item_count | minus: 3 }} more item(s)
              </p>
            {% endif %}
          </div>

          <div style="margin-bottom: 30px;">
            <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
              <span style="color: #767676; font-size: 14px;">Subtotal</span>
              <span style="color: #D2D2D2; font-size: 14px;">{{ cart.total_price | money }}</span>
            </div>
            <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
              <span style="color: #767676; font-size: 14px;">Shipping</span>
              <span style="color: #D2D2D2; font-size: 14px;">Calculated at next step</span>
            </div>
            <div style="padding-top: 20px; border-top: 1px solid rgba(125,125,125,0.5); margin-top: 20px;">
              <div style="display: flex; justify-content: space-between;">
                <span style="color: #D2D2D2; font-size: 18px; font-weight: 300; text-transform: uppercase; letter-spacing: 1px;">Total</span>
                <span style="color: #D2D2D2; font-size: 24px; font-weight: 300;">{{ cart.total_price | money }}</span>
              </div>
            </div>
          </div>

          <a href="{{ routes.cart_url }}" 
             style="display: block; width: 100%; padding: 15px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-decoration: none; text-align: center; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; transition: all 0.3s;">
            Continue to Payment
          </a>
        {% else %}
          <div style="text-align: center; padding: 40px 20px;">
            <p style="color: #767676; font-size: 16px; margin: 0 0 30px;">
              Your cart is empty.
            </p>
            <a href="{{ routes.collections_url }}" 
               style="display: inline-block; padding: 15px 40px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-decoration: none; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; transition: all 0.3s;">
              Continue Shopping
            </a>
          </div>
        {% endif %}
      </div>

    </div>
  </div>
</div>

<style>
  .checkout-page input:focus,
  .checkout-page select:focus {
    border-color: rgba(125,125,125,0.7) !important;
  }
  
  .checkout-page a:hover {
    background: rgba(124,124,124,0.4) !important;
    border-color: rgba(124,124,124,0.4) !important;
  }
  
  @media (max-width: 1024px) {
    .checkout-container {
      grid-template-columns: 1fr !important;
    }
  }
</style>

