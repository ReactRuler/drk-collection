{% comment %}
  Search Results Template
{% endcomment %}

<div class="search-page" style="background-color: #050505; padding: 80px 20px; min-height: 80vh;">
  <div class="page-width">
    <h1 style="color: #D2D2D2; font-size: 48px; font-weight: 300; text-transform: uppercase; letter-spacing: 4px; margin: 0 0 40px; text-align: center;">
      Search Results
    </h1>

    {% if search.performed %}
      {% if search.results_count > 0 %}
        <p style="color: #767676; font-size: 16px; text-align: center; margin: 0 0 60px;">
          Found {{ search.results_count }} results for "{{ search.terms }}"
        </p>

        <div class="search-results" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 40px; max-width: 1400px; margin: 0 auto;">
          {% for item in search.results %}
            {% if item.object_type == 'product' %}
              <div class="search-result-item product-card" style="text-align: center;">
                <a href="{{ item.url }}" style="text-decoration: none; color: inherit;">
                  <div class="product-image" style="position: relative; margin-bottom: 20px; background: #141414; border-radius: 10px; aspect-ratio: 1; overflow: hidden;">
                    {% if item.featured_image %}
                      <img src="{{ item.featured_image | img_url: '600x600' }}" 
                           alt="{{ item.title }}" 
                           style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s;">
                    {% else %}
                      <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #767676;">
                        No Image
                      </div>
                    {% endif %}
                  </div>
                  <h3 style="color: #D2D2D2; font-size: 14px; font-weight: 300; margin: 0 0 10px; text-transform: uppercase; letter-spacing: 1px;">
                    {{ item.title }}
                  </h3>
                  <div style="color: #767676; font-size: 16px;">
                    {{ item.price | money }}
                  </div>
                </a>
              </div>
            {% elsif item.object_type == 'article' %}
              <div class="search-result-item blog-card" style="background: rgba(255,255,255,0.02); border-radius: 10px; overflow: hidden; border: 1px solid rgba(125,125,125,0.5);">
                <a href="{{ item.url }}" style="text-decoration: none; color: inherit;">
                  <div class="blog-image" style="position: relative; background: #141414; aspect-ratio: 16/9; overflow: hidden;">
                    {% if item.image %}
                      <img src="{{ item.image | img_url: '800x450' }}" 
                           alt="{{ item.title }}" 
                           style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s;">
                    {% else %}
                      <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #767676;">
                        No Image
                      </div>
                    {% endif %}
                  </div>
                  <div style="padding: 30px;">
                    <div style="color: #767676; font-size: 12px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 15px;">
                      {{ item.published_at | date: "%B %d, %Y" | upcase }}
                    </div>
                    <h3 style="color: #D2D2D2; font-size: 20px; font-weight: 300; margin: 0 0 15px; text-transform: uppercase; letter-spacing: 1px;">
                      {{ item.title }}
                    </h3>
                    <p style="color: #767676; font-size: 14px; line-height: 1.6; margin: 0;">
                      {{ item.excerpt | strip_html | truncate: 100 }}
                    </p>
                  </div>
                </a>
              </div>
            {% elsif item.object_type == 'page' %}
              <div class="search-result-item page-card" style="background: rgba(255,255,255,0.02); border-radius: 10px; padding: 40px; border: 1px solid rgba(125,125,125,0.5);">
                <a href="{{ item.url }}" style="text-decoration: none; color: inherit;">
                  <h3 style="color: #D2D2D2; font-size: 20px; font-weight: 300; margin: 0 0 15px; text-transform: uppercase; letter-spacing: 1px;">
                    {{ item.title }}
                  </h3>
                  <p style="color: #767676; font-size: 14px; line-height: 1.6; margin: 0;">
                    {{ item.content | strip_html | truncate: 150 }}
                  </p>
                </a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% else %}
        <div style="text-align: center; padding: 80px 20px;">
          <h2 style="color: #D2D2D2; font-size: 32px; font-weight: 300; margin: 0 0 20px; text-transform: uppercase; letter-spacing: 2px;">
            No results found
          </h2>
          <p style="color: #767676; font-size: 16px; margin: 0 0 40px;">
            Try adjusting your search terms.
          </p>
          <a href="{{ routes.collections_url }}" 
             style="display: inline-block; padding: 15px 40px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-decoration: none; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; transition: all 0.3s;">
            Browse All Products
          </a>
        </div>
      {% endif %}
    {% else %}
      <div style="text-align: center; padding: 80px 20px;">
        <form action="{{ routes.search_url }}" method="get" style="max-width: 600px; margin: 0 auto;">
          <input type="search" 
                 name="q" 
                 placeholder="Search products, articles, pages..." 
                 style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; margin-bottom: 20px; outline: none;">
          <button type="submit" 
                  style="width: 100%; padding: 15px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; font-weight: 300; cursor: pointer; transition: all 0.3s;">
            Search
          </button>
        </form>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .search-page .product-card:hover .product-image img,
  .search-page .blog-card:hover .blog-image img {
    transform: scale(1.05);
  }
  
  .search-page button:hover {
    background: rgba(124,124,124,0.4) !important;
    border-color: rgba(124,124,124,0.4) !important;
  }
  
  .search-page input:focus {
    border-color: rgba(125,125,125,0.7) !important;
  }
</style>

