{% comment %}
  Customer Login Template - Based on Figma Design
{% endcomment %}

<div class="login-page" style="background-color: #050505; padding: 100px 20px; min-height: 80vh; display: flex; align-items: center; justify-content: center;">
  <div class="page-width" style="max-width: 500px; width: 100%;">
    
    <div class="login-header" style="text-align: center; margin-bottom: 60px;">
      <h1 style="color: #D2D2D2; font-size: 48px; font-weight: 300; margin: 0 0 20px; text-transform: uppercase; letter-spacing: 4px;">
        Login
      </h1>
      <p style="color: #767676; font-size: 16px; margin: 0;">
        Welcome back! Please login to your account.
      </p>
    </div>

    {% form 'customer_login' %}
      {% if form.errors %}
        <div style="padding: 20px; background: rgba(255,0,0,0.1); border: 1px solid rgba(255,0,0,0.5); border-radius: 10px; margin-bottom: 30px;">
          <p style="color: #ff0000; margin: 0 0 10px;">
            Please correct the following errors:
          </p>
          <ul style="color: #ff0000; margin: 0; padding-left: 20px;">
            {% for field in form.errors %}
              <li>{{ form.errors[field] }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      <div style="margin-bottom: 30px;">
        <label for="CustomerEmail" style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
          Email
        </label>
        <input type="email" 
               id="CustomerEmail" 
               name="customer[email]" 
               required
               autocomplete="email"
               style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
      </div>

      <div style="margin-bottom: 30px;">
        <label for="CustomerPassword" style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
          Password
        </label>
        <input type="password" 
               id="CustomerPassword" 
               name="customer[password]" 
               required
               autocomplete="current-password"
               style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
      </div>

      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 40px; flex-wrap: wrap; gap: 15px;">
        <label style="display: flex; align-items: center; gap: 10px; color: #767676; font-size: 14px; cursor: pointer;">
          <input type="checkbox" name="customer[remember_me]" style="width: 18px; height: 18px; cursor: pointer;">
          Remember me
        </label>
        <a href="{{ routes.account_recover_url }}" style="color: #767676; font-size: 14px; text-decoration: none; transition: color 0.3s;">
          Forgot password?
        </a>
      </div>

      <button type="submit" 
              style="width: 100%; padding: 15px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; font-weight: 300; cursor: pointer; transition: all 0.3s; margin-bottom: 30px;">
        Login
      </button>
    {% endform %}

    <div style="text-align: center; padding-top: 40px; border-top: 1px solid rgba(125,125,125,0.5);">
      <p style="color: #767676; font-size: 14px; margin: 0 0 20px;">
        Don't have an account?
      </p>
      <a href="{{ routes.account_register_url }}" 
         style="display: inline-block; padding: 15px 40px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-decoration: none; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; transition: all 0.3s;">
        Create Account
      </a>
    </div>

  </div>
</div>

<style>
  .login-page input:focus {
    border-color: rgba(125,125,125,0.7) !important;
  }
  
  .login-page button:hover,
  .login-page a[style*="border-radius: 23px"]:hover {
    background: rgba(124,124,124,0.4) !important;
    border-color: rgba(124,124,124,0.4) !important;
  }
  
  .login-page a:hover {
    color: #D2D2D2 !important;
  }
</style>

