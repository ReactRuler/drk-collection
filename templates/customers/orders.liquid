{% comment %}
  Customer Orders Template
{% endcomment %}

<div class="orders-page" style="background-color: #050505; padding: 80px 20px; min-height: 80vh;">
  <div class="page-width">
    
    <div class="orders-header" style="margin-bottom: 60px;">
      <h1 style="color: #D2D2D2; font-size: 48px; font-weight: 300; margin: 0 0 10px; text-transform: uppercase; letter-spacing: 4px;">
        My Orders
      </h1>
      <p style="color: #767676; font-size: 16px; margin: 0;">
        View your order history
      </p>
    </div>

    <div class="orders-container" style="display: grid; grid-template-columns: 350px 1fr; gap: 40px; max-width: 1400px; margin: 0 auto;">
      
      {% comment %} Sidebar Navigation {% endcomment %}
      <aside class="account-sidebar" style="background: rgba(255,255,255,0.02); border-radius: 10px; padding: 40px; border: 1px solid rgba(125,125,125,0.5); height: fit-content;">
        <nav class="account-nav" style="display: flex; flex-direction: column; gap: 20px;">
          <a href="{{ routes.account_url }}" 
             class="nav-item"
             style="color: #767676; text-decoration: none; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; padding: 15px 20px; border-radius: 10px; transition: all 0.3s;">
            Account Information
          </a>
          <a href="{{ routes.account_addresses_url }}" 
             class="nav-item"
             style="color: #767676; text-decoration: none; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; padding: 15px 20px; border-radius: 10px; transition: all 0.3s;">
            Addresses
          </a>
          <a href="{{ routes.account_orders_url }}" 
             class="nav-item active"
             style="color: #D2D2D2; text-decoration: none; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; padding: 15px 20px; border-radius: 10px; background: rgba(124,124,124,0.27); transition: all 0.3s;">
            My Orders
          </a>
          <a href="{{ routes.account_logout_url }}" 
             class="nav-item"
             style="color: #767676; text-decoration: none; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; padding: 15px 20px; border-radius: 10px; transition: all 0.3s;">
            Logout
          </a>
        </nav>
      </aside>

      {% comment %} Main Content {% endcomment %}
      <div class="orders-content">
        {% if customer.orders.size > 0 %}
          <div class="orders-list" style="display: flex; flex-direction: column; gap: 30px;">
            {% for order in customer.orders %}
              <div class="order-card" style="background: rgba(255,255,255,0.02); border-radius: 10px; padding: 30px; border: 1px solid rgba(125,125,125,0.5);">
                <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 25px; flex-wrap: wrap; gap: 20px;">
                  <div>
                    <h3 style="color: #D2D2D2; font-size: 18px; font-weight: 300; margin: 0 0 10px; text-transform: uppercase; letter-spacing: 1px;">
                      Order #{{ order.order_number }}
                    </h3>
                    <p style="color: #767676; font-size: 14px; margin: 0;">
                      Placed on {{ order.created_at | date: "%B %d, %Y" }}
                    </p>
                  </div>
                  <div style="text-align: right;">
                    <p style="color: #D2D2D2; font-size: 20px; font-weight: 300; margin: 0 0 10px;">
                      {{ order.total_price | money }}
                    </p>
                    <span style="display: inline-block; padding: 5px 15px; background: rgba(124,124,124,0.27); border-radius: 20px; color: #D2D2D2; font-size: 12px; text-transform: uppercase; letter-spacing: 1px;">
                      {{ order.fulfillment_status_label | default: order.financial_status_label }}
                    </span>
                  </div>
                </div>

                <div class="order-items" style="margin-bottom: 25px; padding-top: 25px; border-top: 1px solid rgba(125,125,125,0.5);">
                  <div style="display: grid; gap: 15px;">
                    {% for line_item in order.line_items limit: 3 %}
                      <div style="display: flex; gap: 15px; align-items: center;">
                        {% if line_item.image %}
                          <div style="width: 60px; height: 60px; background: #141414; border-radius: 10px; overflow: hidden; flex-shrink: 0;">
                            <img src="{{ line_item.image | img_url: '120x120' }}" 
                                 alt="{{ line_item.title }}"
                                 style="width: 100%; height: 100%; object-fit: cover;">
                          </div>
                        {% endif %}
                        <div style="flex: 1;">
                          <p style="color: #D2D2D2; font-size: 14px; margin: 0 0 5px;">
                            {{ line_item.title }}
                          </p>
                          <p style="color: #767676; font-size: 12px; margin: 0;">
                            Quantity: {{ line_item.quantity }} Ã— {{ line_item.price | money }}
                          </p>
                        </div>
                      </div>
                    {% endfor %}
                    {% if order.line_items.size > 3 %}
                      <p style="color: #767676; font-size: 12px; margin: 10px 0 0;">
                        + {{ order.line_items.size | minus: 3 }} more item(s)
                      </p>
                    {% endif %}
                  </div>
                </div>

                <div style="display: flex; gap: 15px; flex-wrap: wrap;">
                  <a href="{{ order.order_status_url }}" 
                     style="display: inline-block; padding: 12px 30px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-decoration: none; text-transform: uppercase; letter-spacing: 1px; font-size: 12px; transition: all 0.3s;">
                    View Order
                  </a>
                  {% if order.fulfillment_status == 'fulfilled' %}
                    <a href="{{ routes.account_orders_url }}/{{ order.id }}/track" 
                       style="display: inline-block; padding: 12px 30px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: transparent; color: #767676; text-decoration: none; text-transform: uppercase; letter-spacing: 1px; font-size: 12px; transition: all 0.3s;">
                      Track Package
                    </a>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
        {% else %}
          <div style="text-align: center; padding: 80px 20px; background: rgba(255,255,255,0.02); border-radius: 10px; border: 1px solid rgba(125,125,125,0.5);">
            <p style="color: #767676; font-size: 18px; margin: 0 0 30px;">
              You haven't placed any orders yet.
            </p>
            <a href="{{ routes.collections_url }}" 
               style="display: inline-block; padding: 15px 40px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-decoration: none; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; transition: all 0.3s;">
              Start Shopping
            </a>
          </div>
        {% endif %}
      </div>

    </div>
  </div>
</div>

<style>
  .order-card a:hover {
    background: rgba(124,124,124,0.4) !important;
    border-color: rgba(124,124,124,0.4) !important;
    color: #D2D2D2 !important;
  }
  
  @media (max-width: 1024px) {
    .orders-container {
      grid-template-columns: 1fr !important;
    }
  }
</style>

