{% comment %}
  Customer Register Template - Based on Figma Design
{% endcomment %}

<div class="register-page" style="background-color: #050505; padding: 100px 20px; min-height: 80vh; display: flex; align-items: center; justify-content: center;">
  <div class="page-width" style="max-width: 500px; width: 100%;">
    
    <div class="register-header" style="text-align: center; margin-bottom: 60px;">
      <h1 style="color: #D2D2D2; font-size: 48px; font-weight: 300; margin: 0 0 20px; text-transform: uppercase; letter-spacing: 4px;">
        Create Account
      </h1>
      <p style="color: #767676; font-size: 16px; margin: 0;">
        Join DRK Collection and start shopping.
      </p>
    </div>

    {% form 'create_customer' %}
      {% if form.errors %}
        <div style="padding: 20px; background: rgba(255,0,0,0.1); border: 1px solid rgba(255,0,0,0.5); border-radius: 10px; margin-bottom: 30px;">
          <p style="color: #ff0000; margin: 0 0 10px;">
            Please correct the following errors:
          </p>
          <ul style="color: #ff0000; margin: 0; padding-left: 20px;">
            {% for field in form.errors %}
              <li>{{ form.errors[field] }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      <div style="margin-bottom: 30px;">
        <label for="RegisterFirstName" style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
          First Name
        </label>
        <input type="text" 
               id="RegisterFirstName" 
               name="customer[first_name]" 
               required
               autocomplete="given-name"
               style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
      </div>

      <div style="margin-bottom: 30px;">
        <label for="RegisterLastName" style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
          Last Name
        </label>
        <input type="text" 
               id="RegisterLastName" 
               name="customer[last_name]" 
               required
               autocomplete="family-name"
               style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
      </div>

      <div style="margin-bottom: 30px;">
        <label for="RegisterEmail" style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
          Email
        </label>
        <input type="email" 
               id="RegisterEmail" 
               name="customer[email]" 
               required
               autocomplete="email"
               style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
      </div>

      <div style="margin-bottom: 40px;">
        <label for="RegisterPassword" style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
          Password
        </label>
        <input type="password" 
               id="RegisterPassword" 
               name="customer[password]" 
               required
               autocomplete="new-password"
               style="width: 100%; padding: 15px 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
      </div>

      <button type="submit" 
              style="width: 100%; padding: 15px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; font-weight: 300; cursor: pointer; transition: all 0.3s; margin-bottom: 30px;">
        Create Account
      </button>
    {% endform %}

    <div style="text-align: center; padding-top: 40px; border-top: 1px solid rgba(125,125,125,0.5);">
      <p style="color: #767676; font-size: 14px; margin: 0 0 20px;">
        Already have an account?
      </p>
      <a href="{{ routes.account_login_url }}" 
         style="display: inline-block; padding: 15px 40px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-decoration: none; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; transition: all 0.3s;">
        Login
      </a>
    </div>

  </div>
</div>

<style>
  .register-page input:focus {
    border-color: rgba(125,125,125,0.7) !important;
  }
  
  .register-page button:hover,
  .register-page a[style*="border-radius: 23px"]:hover {
    background: rgba(124,124,124,0.4) !important;
    border-color: rgba(124,124,124,0.4) !important;
  }
</style>

