{% comment %}
  Customer Addresses Template
{% endcomment %}

<div class="addresses-page" style="background-color: #050505; padding: 80px 20px; min-height: 80vh;">
  <div class="page-width">
    
    <div class="addresses-header" style="margin-bottom: 60px;">
      <h1 style="color: #D2D2D2; font-size: 48px; font-weight: 300; margin: 0 0 10px; text-transform: uppercase; letter-spacing: 4px;">
        Addresses
      </h1>
      <p style="color: #767676; font-size: 16px; margin: 0;">
        Manage your shipping addresses
      </p>
    </div>

    <div class="addresses-container" style="display: grid; grid-template-columns: 350px 1fr; gap: 40px; max-width: 1400px; margin: 0 auto;">
      
      {% comment %} Sidebar Navigation {% endcomment %}
      <aside class="account-sidebar" style="background: rgba(255,255,255,0.02); border-radius: 10px; padding: 40px; border: 1px solid rgba(125,125,125,0.5); height: fit-content;">
        <nav class="account-nav" style="display: flex; flex-direction: column; gap: 20px;">
          <a href="{{ routes.account_url }}" 
             class="nav-item"
             style="color: #767676; text-decoration: none; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; padding: 15px 20px; border-radius: 10px; transition: all 0.3s;">
            Account Information
          </a>
          <a href="{{ routes.account_addresses_url }}" 
             class="nav-item active"
             style="color: #D2D2D2; text-decoration: none; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; padding: 15px 20px; border-radius: 10px; background: rgba(124,124,124,0.27); transition: all 0.3s;">
            Addresses
          </a>
          <a href="{{ routes.account_orders_url }}" 
             class="nav-item"
             style="color: #767676; text-decoration: none; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; padding: 15px 20px; border-radius: 10px; transition: all 0.3s;">
            My Orders
          </a>
          <a href="{{ routes.account_logout_url }}" 
             class="nav-item"
             style="color: #767676; text-decoration: none; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; padding: 15px 20px; border-radius: 10px; transition: all 0.3s;">
            Logout
          </a>
        </nav>
      </aside>

      {% comment %} Main Content {% endcomment %}
      <div class="addresses-content">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 40px;">
          <h2 style="color: #D2D2D2; font-size: 32px; font-weight: 300; margin: 0; text-transform: uppercase; letter-spacing: 2px;">
            Your Addresses
          </h2>
          <button id="add-address-btn" 
                  style="padding: 15px 40px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; cursor: pointer; transition: all 0.3s;">
            Add New Address
          </button>
        </div>

        <div class="addresses-list" style="display: grid; gap: 30px;">
          {% for address in customer.addresses %}
            <div class="address-card" style="background: rgba(255,255,255,0.02); border-radius: 10px; padding: 30px; border: 1px solid rgba(125,125,125,0.5);">
              <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 20px;">
                <div>
                  {% if address == customer.default_address %}
                    <span style="display: inline-block; padding: 5px 15px; background: rgba(124,124,124,0.27); border-radius: 20px; color: #D2D2D2; font-size: 12px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 15px;">
                      Default
                    </span>
                  {% endif %}
                  <h3 style="color: #D2D2D2; font-size: 18px; font-weight: 300; margin: 0 0 15px; text-transform: uppercase; letter-spacing: 1px;">
                    {{ address.first_name }} {{ address.last_name }}
                  </h3>
                </div>
                <div style="display: flex; gap: 10px;">
                  <button class="edit-address-btn" data-address-id="{{ address.id }}" 
                          style="padding: 8px 20px; border: 1px solid rgba(124,124,124,0.27); border-radius: 20px; background: transparent; color: #767676; font-size: 12px; text-transform: uppercase; cursor: pointer; transition: all 0.3s;">
                    Edit
                  </button>
                  <form action="{{ routes.account_addresses_url }}/{{ address.id }}" method="post" style="display: inline;">
                    <input type="hidden" name="_method" value="delete">
                    <button type="submit" 
                            style="padding: 8px 20px; border: 1px solid rgba(255,0,0,0.3); border-radius: 20px; background: transparent; color: #ff0000; font-size: 12px; text-transform: uppercase; cursor: pointer; transition: all 0.3s;">
                      Delete
                    </button>
                  </form>
                </div>
              </div>
              <div style="color: #767676; font-size: 14px; line-height: 1.8;">
                <p style="margin: 0 0 5px;">{{ address.address1 }}</p>
                {% if address.address2 != blank %}
                  <p style="margin: 0 0 5px;">{{ address.address2 }}</p>
                {% endif %}
                <p style="margin: 0 0 5px;">{{ address.city }}, {{ address.province }} {{ address.zip }}</p>
                <p style="margin: 0;">{{ address.country }}</p>
                {% if address.phone != blank %}
                  <p style="margin: 10px 0 0;">Phone: {{ address.phone }}</p>
                {% endif %}
              </div>
            </div>
          {% else %}
            <div style="text-align: center; padding: 60px 20px; background: rgba(255,255,255,0.02); border-radius: 10px; border: 1px solid rgba(125,125,125,0.5);">
              <p style="color: #767676; font-size: 16px; margin: 0 0 30px;">
                You haven't added any addresses yet.
              </p>
              <button id="add-first-address-btn" 
                      style="padding: 15px 40px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; cursor: pointer; transition: all 0.3s;">
                Add Your First Address
              </button>
            </div>
          {% endfor %}
        </div>
      </div>

    </div>
  </div>
</div>

<style>
  .address-card button:hover {
    background: rgba(124,124,124,0.4) !important;
    border-color: rgba(124,124,124,0.4) !important;
    color: #D2D2D2 !important;
  }
  
  #add-address-btn:hover,
  #add-first-address-btn:hover {
    background: rgba(124,124,124,0.4) !important;
    border-color: rgba(124,124,124,0.4) !important;
  }
  
  @media (max-width: 1024px) {
    .addresses-container {
      grid-template-columns: 1fr !important;
    }
  }
</style>

