  display: flex;
  flex-direction: column;
  gap: 8px;
}

.product-quantity label {
  font-family: 'Inter', sans-serif;
  font-weight: 500;
  font-size: 14px;
  text-transform: uppercase;
  color: #FFFFFF;
  letter-spacing: 0.2em;
}

.quantity-selector {
  display: flex;
  align-items: center;
  gap: 16px;
  width: fit-content;
}

.quantity-btn {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background: rgba(124, 124, 124, 0.27);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(140, 140, 140, 0.4);
  color: #FFFFFF;
  font-size: 24px;
  cursor: pointer;
  display: flex;
