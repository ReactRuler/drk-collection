  grid-template-columns: 1fr 1fr;
  gap: 80px;
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 20px;
}

.product-images {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.product-main-image {
  width: 100%;
  border-radius: 10px;
  overflow: hidden;
  background: #0B0B0B;
}

.product-main-image img {
  width: 100%;
  height: auto;
  display: block;
  object-fit: cover;
}

.product-thumbnails {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
}

.thumbnail-item {
