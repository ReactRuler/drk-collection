{% section 'header' %}

<div class="product-page">
  <div class="page-width">
    <div class="product-container">
      <div class="product-images">
        <div class="product-main-image">
          {% if product.featured_image %}
            <img 
              src="{{ product.featured_image | image_url: width: 800 }}" 
              alt="{{ product.featured_image.alt | escape }}"
              id="main-product-image"
            >
          {% else %}
            <img src="{{ 'placeholder.png' | asset_url }}" alt="{{ product.title }}">
          {% endif %}
        </div>
        <div class="product-thumbnails">
          {% for image in product.images limit: 6 %}
            <div class="thumbnail-item">
              <img 
                src="{{ image | image_url: width: 150 }}" 
                alt="{{ image.alt | escape }}"
                onclick="changeMainImage('{{ image | image_url: width: 800 }}', '{{ image.alt | escape }}')"
              >
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="product-info">
        <h1 class="product-title">{{ product.title }}</h1>
        
        <div class="product-price">
          {% if product.compare_at_price > product.price %}
            <span class="original-price">{{ product.compare_at_price | money }}</span>
            <span class="sale-price">{{ product.price | money }}</span>
          {% else %}
            <span class="current-price">{{ product.price | money }}</span>
          {% endif %}
        </div>

        <div class="product-rating">
          {% assign rating = product.metafields.reviews.rating.value | default: 4.5 %}
          {% assign full_stars = rating | floor %}
          {% assign has_half = rating | modulo: 1 | round: 1 %}
          
          {% for i in (1..5) %}
            {% if i <= full_stars %}
              <svg width="20" height="20" viewBox="0 0 24 24" fill="white">
                <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
              </svg>
            {% elsif i == full_stars | plus: 1 and has_half >= 0.5 %}
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="1.5">
                <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77V2Z" fill="white"/>
              </svg>
            {% else %}
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="1.5" opacity="0.3">
                <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
              </svg>
            {% endif %}
          {% endfor %}
        </div>

        <div class="product-description">
          {{ product.description }}
        </div>

        <form action="/cart/add" method="post" enctype="multipart/form-data" id="product-form">
          {% unless product.has_only_default_variant %}
            <div class="product-variants">
              {% for option in product.options_with_values %}
                <div class="variant-selector">
                  <label for="option-{{ forloop.index }}">{{ option.name }}</label>
                  <select 
                    name="id" 
                    id="option-{{ forloop.index }}"
                    class="variant-select"
                  >
                    {% for variant in product.variants %}
                      <option 
                        value="{{ variant.id }}"
                        {% if variant == product.selected_or_first_available_variant %}selected{% endif %}
                        {% unless variant.available %}disabled{% endunless %}
                      >
                        {{ variant.title }} - {{ variant.price | money }}
                        {% unless variant.available %} (Sold Out){% endunless %}
                      </option>
                    {% endfor %}
                  </select>
                </div>
              {% endfor %}
            </div>
          {% else %}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          {% endunless %}

          <div class="product-quantity">
            <label for="quantity">Quantity</label>
            <div class="quantity-selector">
              <button type="button" class="quantity-btn minus" onclick="decreaseQuantity()">-</button>
              <input 
                type="number" 
                id="quantity" 
                name="quantity" 
                value="1" 
                min="1"
                class="quantity-input"
              >
              <button type="button" class="quantity-btn plus" onclick="increaseQuantity()">+</button>
            </div>
          </div>

          <button 
            type="submit" 
            class="add-to-cart-btn"
            {% unless product.selected_or_first_available_variant.available %}disabled{% endunless %}
          >
            {% if product.selected_or_first_available_variant.available %}
              ADD TO CART
            {% else %}
              SOLD OUT
            {% endif %}
          </button>
        </form>
      </div>
    </div>
  </div>

  <div class="related-products-section">
    <div class="page-width">
      <h2 class="related-products-title">RELATED PRODUCTS</h2>
      <div class="related-products-grid">
        {% assign related_products = product.collections.first.products | where: 'id', product.id | reverse %}
        {% assign has_related = false %}
        
        {% if product.collections.size > 0 %}
          {% for collection in product.collections %}
            {% for related_product in collection.products limit: 5 %}
              {% if related_product.id != product.id %}
                {% assign has_related = true %}
                <div class="related-product-card">
                  <a href="{{ related_product.url }}">
                    <div class="related-product-image">
                      {% if related_product.featured_image %}
                        <img src="{{ related_product.featured_image | image_url: width: 400 }}" alt="{{ related_product.title }}">
                      {% else %}
                        <div class="related-product-placeholder"></div>
                      {% endif %}
                    </div>
                    <h3 class="related-product-title">{{ related_product.title }}</h3>
                    <div class="related-product-price">
                      {% if related_product.compare_at_price > related_product.price %}
                        <span class="related-original-price">{{ related_product.compare_at_price | money }}</span>
                        <span class="related-sale-price">{{ related_product.price | money }}</span>
                      {% else %}
                        <span class="related-current-price">{{ related_product.price | money }}</span>
                      {% endif %}
                    </div>
                  </a>
                </div>
                {% if forloop.index >= 4 %}{% break %}{% endif %}
              {% endif %}
            {% endfor %}
            {% if has_related %}{% break %}{% endif %}
          {% endfor %}
        {% endif %}

        {% unless has_related %}
          {% assign all_products = collections.all.products | where: 'id', product.id | reverse %}
          {% assign count = 0 %}
          {% for random_product in collections.all.products %}
            {% if random_product.id != product.id and count < 4 %}
              {% assign count = count | plus: 1 %}
              <div class="related-product-card">
                <a href="{{ random_product.url }}">
                  <div class="related-product-image">
                    {% if random_product.featured_image %}
                      <img src="{{ random_product.featured_image | image_url: width: 400 }}" alt="{{ random_product.title }}">
                    {% else %}
                      <div class="related-product-placeholder"></div>
                    {% endif %}
                  </div>
                  <h3 class="related-product-title">{{ random_product.title }}</h3>
                  <div class="related-product-price">
                    {% if random_product.compare_at_price > random_product.price %}
                      <span class="related-original-price">{{ random_product.compare_at_price | money }}</span>
                      <span class="related-sale-price">{{ random_product.price | money }}</span>
                    {% else %}
                      <span class="related-current-price">{{ random_product.price | money }}</span>
                    {% endif %}
                  </div>
                </a>
              </div>
            {% endif %}
          {% endfor %}
        {% endunless %}
      </div>
    </div>
  </div>
</div>

{% section 'footer' %}

<style>
.product-page {
  background: #050505;
  min-height: 100vh;
  padding: 100px 0 40px 0;
  margin-top: 120px;
}

