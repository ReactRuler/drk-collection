  overflow: hidden;
  background: #0B0B0B;
  cursor: pointer;
  transition: opacity 0.3s;
}

.thumbnail-item:hover {
  opacity: 0.8;
}

.thumbnail-item img {
  width: 100%;
  height: auto;
  display: block;
  object-fit: cover;
}

