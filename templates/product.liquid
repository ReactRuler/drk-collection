  line-height: 40px;
  text-transform: uppercase;
  background: linear-gradient(82.13deg, #A2A2A2 2.11%, #191919 50.06%, #797979 98%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin: 0;
}

.product-price {
  display: flex;
  align-items: center;
  gap: 16px;
}

.original-price {
  font-family: 'Inter', sans-serif;
  font-weight: 300;
  font-size: 28px;
  color: #767676;
  text-decoration: line-through;
}

.sale-price,
.current-price {
  font-family: 'Inter', sans-serif;
  font-weight: 700;
  font-size: 28px;
  color: #FFFFFF;
}

.product-rating {
  display: flex;
  align-items: center;
  gap: 4px;
}

.product-description {
  font-family: 'Inter', sans-serif;
  font-weight: 300;
  font-size: 16px;
  line-height: 24px;
  color: #B0B0B0;
}

.product-variants {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.variant-selector {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.variant-selector label {
  font-family: 'Inter', sans-serif;
  font-weight: 500;
  font-size: 14px;
  text-transform: uppercase;
  color: #FFFFFF;
  letter-spacing: 0.2em;
}

.variant-select {
  width: 100%;
  padding: 20px;
  background: rgba(124, 124, 124, 0.27);
