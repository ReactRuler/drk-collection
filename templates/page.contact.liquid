{% comment %}
  Contact Page Template
{% endcomment %}

<div class="contact-page" style="background-color: #050505; padding: 100px 20px;">
  <div class="page-width">
    
    <div class="contact-header" style="text-align: center; margin-bottom: 80px; max-width: 800px; margin-left: auto; margin-right: auto;">
      <h1 style="color: #D2D2D2; font-size: 72px; font-weight: 300; margin: 0 0 30px; text-transform: uppercase; letter-spacing: 4px; line-height: 1.1;">
        Get In Touch
      </h1>
      <p style="color: #767676; font-size: 20px; line-height: 1.8; margin: 0;">
        Have a question? We'd love to hear from you. Send us a message and we'll respond as soon as possible.
      </p>
    </div>

    <div class="contact-container" style="display: grid; grid-template-columns: 1fr 1fr; gap: 80px; max-width: 1200px; margin: 0 auto;">
      
      {% comment %} Contact Form {% endcomment %}
      <div class="contact-form-wrapper">
        <h2 style="color: #D2D2D2; font-size: 32px; font-weight: 300; margin: 0 0 40px; text-transform: uppercase; letter-spacing: 2px;">
          Send Us A Message
        </h2>
        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <div style="padding: 20px; background: rgba(255,255,255,0.05); border: 1px solid rgba(125,125,125,0.5); border-radius: 10px; margin-bottom: 30px;">
              <p style="color: #D2D2D2; margin: 0;">
                Thank you for your message. We'll get back to you soon!
              </p>
            </div>
          {% endif %}

          {% if form.errors %}
            <div style="padding: 20px; background: rgba(255,0,0,0.1); border: 1px solid rgba(255,0,0,0.5); border-radius: 10px; margin-bottom: 30px;">
              <p style="color: #ff0000; margin: 0;">
                Please correct the following errors:
              </p>
              <ul style="color: #ff0000; margin: 10px 0 0 20px; padding: 0;">
                {% for field in form.errors %}
                  <li>{{ form.errors[field] }}</li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}

          <div style="margin-bottom: 30px;">
            <label for="ContactFormName" style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
              Name
            </label>
            <input type="text" 
                   id="ContactFormName" 
                   name="contact[name]" 
                   required
                   style="width: 100%; padding: 15px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
          </div>

          <div style="margin-bottom: 30px;">
            <label for="ContactFormEmail" style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
              Email
            </label>
            <input type="email" 
                   id="ContactFormEmail" 
                   name="contact[email]" 
                   required
                   style="width: 100%; padding: 15px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none;">
          </div>

          <div style="margin-bottom: 30px;">
            <label for="ContactFormMessage" style="display: block; color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
              Message
            </label>
            <textarea id="ContactFormMessage" 
                      name="contact[body]" 
                      rows="8"
                      required
                      style="width: 100%; padding: 15px; background: rgba(255,255,255,0.05); border: 1px solid rgba(113,113,113,0.4); border-radius: 10px; color: #D2D2D2; font-size: 16px; outline: none; resize: vertical; font-family: inherit;"></textarea>
          </div>

          <button type="submit" 
                  style="width: 100%; padding: 15px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; font-weight: 300; cursor: pointer; transition: all 0.3s;">
            Send Message
          </button>
        {% endform %}
      </div>

      {% comment %} Contact Info {% endcomment %}
      <div class="contact-info">
        <h2 style="color: #D2D2D2; font-size: 32px; font-weight: 300; margin: 0 0 40px; text-transform: uppercase; letter-spacing: 2px;">
          Contact Information
        </h2>
        
        <div style="margin-bottom: 40px;">
          <h3 style="color: #D2D2D2; font-size: 18px; font-weight: 300; margin: 0 0 15px; text-transform: uppercase; letter-spacing: 1px;">
            Email
          </h3>
          <a href="mailto:hello@drkcollection.com" style="color: #767676; font-size: 16px; text-decoration: none; transition: color 0.3s;">
            hello@drkcollection.com
          </a>
        </div>

        <div style="margin-bottom: 40px;">
          <h3 style="color: #D2D2D2; font-size: 18px; font-weight: 300; margin: 0 0 15px; text-transform: uppercase; letter-spacing: 1px;">
            Phone
          </h3>
          <a href="tel:+1234567890" style="color: #767676; font-size: 16px; text-decoration: none; transition: color 0.3s;">
            +1 (234) 567-890
          </a>
        </div>

        <div style="margin-bottom: 40px;">
          <h3 style="color: #D2D2D2; font-size: 18px; font-weight: 300; margin: 0 0 15px; text-transform: uppercase; letter-spacing: 1px;">
            Address
          </h3>
          <p style="color: #767676; font-size: 16px; line-height: 1.8; margin: 0;">
            123 Design Street<br>
            Black City, BC 12345<br>
            United States
          </p>
        </div>

        <div>
          <h3 style="color: #D2D2D2; font-size: 18px; font-weight: 300; margin: 0 0 20px; text-transform: uppercase; letter-spacing: 1px;">
            Follow Us
          </h3>
          <div style="display: flex; gap: 15px;">
            <a href="#" style="width: 24px; height: 24px; border-radius: 50%; background: rgba(125,125,125,0.5); display: flex; align-items: center; justify-content: center; color: #D2D2D2; text-decoration: none; transition: all 0.3s;">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
              </svg>
            </a>
            <a href="#" style="width: 24px; height: 24px; border-radius: 50%; background: rgba(125,125,125,0.5); display: flex; align-items: center; justify-content: center; color: #D2D2D2; text-decoration: none; transition: all 0.3s;">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37zM17.5 6.5h.01"/>
              </svg>
            </a>
            <a href="#" style="width: 24px; height: 24px; border-radius: 50%; background: rgba(125,125,125,0.5); display: flex; align-items: center; justify-content: center; color: #D2D2D2; text-decoration: none; transition: all 0.3s;">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<style>
  .contact-page button:hover {
    background: rgba(124,124,124,0.4) !important;
    border-color: rgba(124,124,124,0.4) !important;
  }
  
  .contact-page a:hover {
    color: #D2D2D2 !important;
  }
  
  .contact-info a[style*="background: rgba(125,125,125,0.5)"]:hover {
    background: rgba(125,125,125,0.7) !important;
  }
  
  .contact-page input:focus,
  .contact-page textarea:focus {
    border-color: rgba(125,125,125,0.7) !important;
  }
  
  @media (max-width: 1024px) {
    .contact-container {
      grid-template-columns: 1fr !important;
    }
    .contact-header h1 {
      font-size: 48px !important;
    }
  }
</style>

