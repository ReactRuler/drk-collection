{% section 'header' %}

<div class="dashboard-page">
  <div class="page-width">
    <div class="dashboard-container">
      <!-- Sidebar Navigation -->
      <div class="dashboard-sidebar">
        <h2 class="sidebar-title">My Account</h2>
        <nav class="dashboard-nav">
          <a href="/account" class="nav-item">Account Information</a>
          <a href="/account/orders" class="nav-item">My Orders</a>
          <a href="/account/addresses" class="nav-item">Addresses</a>
          <a href="/pages/dashboard-tracking" class="nav-item active">Tracking</a>
          <a href="/pages/dashboard-wishlist" class="nav-item">Wishlist</a>
          <a href="/account/logout" class="nav-item">Logout</a>
        </nav>
      </div>

      <!-- Main Content -->
      <div class="dashboard-content">
        <h1 class="dashboard-page-title">Order Tracking</h1>
        
        <div class="dashboard-section">
          <div class="tracking-search">
            <form class="tracking-form">
              <input type="text" id="tracking-number" placeholder="Enter tracking number" class="tracking-input" required>
              <button type="submit" class="track-button">TRACK ORDER</button>
            </form>
          </div>

          <div id="tracking-results" class="tracking-results" style="display: none;">
            <div class="tracking-timeline">
              <div class="timeline-item active">
                <div class="timeline-marker"></div>
                <div class="timeline-content">
                  <h3>Order Placed</h3>
                  <p>Your order has been received</p>
                  <span class="timeline-date">Jan 15, 2024</span>
                </div>
              </div>
              
              <div class="timeline-item active">
                <div class="timeline-marker"></div>
                <div class="timeline-content">
                  <h3>Processing</h3>
                  <p>Your order is being prepared</p>
                  <span class="timeline-date">Jan 16, 2024</span>
                </div>
              </div>
              
              <div class="timeline-item active">
                <div class="timeline-marker"></div>
                <div class="timeline-content">
                  <h3>Shipped</h3>
                  <p>Your order has been shipped</p>
                  <span class="timeline-date">Jan 17, 2024</span>
                </div>
              </div>
              
              <div class="timeline-item">
                <div class="timeline-marker"></div>
                <div class="timeline-content">
                  <h3>Out for Delivery</h3>
                  <p>Your order is on the way</p>
                  <span class="timeline-date">Pending</span>
                </div>
              </div>
              
              <div class="timeline-item">
                <div class="timeline-marker"></div>
                <div class="timeline-content">
                  <h3>Delivered</h3>
                  <p>Your order has been delivered</p>
                  <span class="timeline-date">Pending</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.dashboard-page {
  background-color: #050505;
  min-height: 100vh;
  padding: 120px 0 60px;
}

.dashboard-container {
  display: grid;
  grid-template-columns: 250px 1fr;
  gap: 40px;
  max-width: 1400px;
  margin: 0 auto;
}

.dashboard-sidebar {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 10px;
  padding: 30px;
  height: fit-content;
  position: sticky;
  top: 120px;
}

.sidebar-title {
  color: #D2D2D2;
  font-size: 20px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 24px;
}

.dashboard-nav {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.nav-item {
  color: #767676;
  text-decoration: none;
  padding: 12px 16px;
  border-radius: 8px;
  font-size: 14px;
  transition: all 0.3s;
}

.nav-item:hover,
.nav-item.active {
  background: rgba(255, 255, 255, 0.1);
  color: #D2D2D2;
}

.dashboard-content {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 10px;
  padding: 40px;
}

.dashboard-page-title {
  color: #D2D2D2;
  font-size: 28px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 32px;
}

.tracking-search {
  margin-bottom: 40px;
}

.tracking-form {
  display: flex;
  gap: 16px;
  max-width: 600px;
}

.tracking-input {
  flex: 1;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 10px;
  padding: 12px 16px;
  color: #D2D2D2;
  font-size: 14px;
  font-family: inherit;
}

.tracking-input:focus {
  outline: none;
  border-color: rgba(255, 255, 255, 0.3);
}

.track-button {
  background: #D2D2D2;
  color: #050505;
  border: none;
  border-radius: 10px;
  padding: 12px 24px;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  cursor: pointer;
  transition: background 0.3s;
}

.track-button:hover {
  background: #ffffff;
}

.tracking-timeline {
  position: relative;
  padding-left: 40px;
}

.timeline-item {
  position: relative;
  padding-bottom: 32px;
  padding-left: 40px;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-marker {
  position: absolute;
  left: -8px;
  top: 0;
  width: 16px;
  height: 16px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  border: 2px solid rgba(255, 255, 255, 0.2);
}

.timeline-item.active .timeline-marker {
  background: #D2D2D2;
  border-color: #D2D2D2;
}

.timeline-item:not(:last-child)::before {
  content: '';
  position: absolute;
  left: -1px;
  top: 16px;
  width: 2px;
  height: calc(100% - 16px);
  background: rgba(255, 255, 255, 0.1);
}

.timeline-item.active:not(:last-child)::before {
  background: rgba(210, 210, 210, 0.3);
}

.timeline-content h3 {
  color: #D2D2D2;
  font-size: 18px;
  font-weight: 600;
  margin: 0 0 4px 0;
}

.timeline-content p {
  color: #767676;
  font-size: 14px;
  margin: 0 0 8px 0;
}

.timeline-date {
  color: #767676;
  font-size: 12px;
}

.timeline-item.active .timeline-content h3 {
  color: #D2D2D2;
}

.timeline-item.active .timeline-content p {
  color: #D2D2D2;
}

@media (max-width: 1024px) {
  .dashboard-container {
    grid-template-columns: 1fr;
  }
  
  .dashboard-sidebar {
    position: static;
  }
  
  .dashboard-nav {
    flex-direction: row;
    flex-wrap: wrap;
  }
  
  .tracking-form {
    flex-direction: column;
  }
}
</style>

<script>
document.querySelector('.tracking-form').addEventListener('submit', function(e) {
  e.preventDefault();
  const trackingNumber = document.getElementById('tracking-number').value;
  if (trackingNumber) {
    document.getElementById('tracking-results').style.display = 'block';
  }
});
</script>

