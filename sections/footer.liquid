<footer class="footer-section" style="background-image: url('{{ section.settings.background_image | image_url: width: 2000 }}');">
  <div class="footer-main-content">
    <div class="footer-left">
      <div class="footer-logo">
        {% if section.settings.logo %}
          <img src="{{ section.settings.logo | image_url: width: 400 }}" alt="{{ section.settings.logo.alt | default: 'DRK Collection' }}">
        {% endif %}
      </div>
      <p class="footer-description">
        {{ section.settings.description }}
      </p>
      <div class="footer-social-icons">
        {% if section.settings.facebook_url != blank %}
          <a href="{{ section.settings.facebook_url }}" class="social-icon" target="_blank">
            {% if section.settings.facebook_icon %}
              <img src="{{ section.settings.facebook_icon | image_url: width: 48 }}" alt="Facebook">
            {% endif %}
          </a>
        {% endif %}
        {% if section.settings.instagram_url != blank %}
          <a href="{{ section.settings.instagram_url }}" class="social-icon" target="_blank">
            {% if section.settings.instagram_icon %}
              <img src="{{ section.settings.instagram_icon | image_url: width: 48 }}" alt="Instagram">
            {% endif %}
          </a>
        {% endif %}
        {% if section.settings.whatsapp_url != blank %}
          <a href="{{ section.settings.whatsapp_url }}" class="social-icon" target="_blank">
            {% if section.settings.whatsapp_icon %}
              <img src="{{ section.settings.whatsapp_icon | image_url: width: 48 }}" alt="WhatsApp">
            {% endif %}
          </a>
        {% endif %}
        {% if section.settings.linkedin_url != blank %}
          <a href="{{ section.settings.linkedin_url }}" class="social-icon" target="_blank">
            {% if section.settings.linkedin_icon %}
              <img src="{{ section.settings.linkedin_icon | image_url: width: 48 }}" alt="LinkedIn">
            {% endif %}
          </a>
        {% endif %}
      </div>
    </div>

    <div class="footer-right">
      <div class="footer-columns">
        {% for block in section.blocks %}
          {% if block.type == 'menu' %}
            <div class="footer-column">
              <h3 class="footer-column-title">{{ block.settings.title }}</h3>
              <ul class="footer-links">
                {% for i in (1..5) %}
                  {% assign link_key = 'link_' | append: i %}
                  {% assign label_key = 'label_' | append: i %}
                  {% if block.settings[label_key] != blank %}
                    <li><a href="{{ block.settings[link_key] }}">{{ block.settings[label_key] }}</a></li>
                  {% endif %}
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="footer-subscribe">
        <h3 class="subscribe-title">{{ section.settings.subscribe_title }}</h3>
        <p class="subscribe-description">{{ section.settings.subscribe_description }}</p>
        <button class="subscribe-button">{{ section.settings.subscribe_button_text }}</button>
      </div>
    </div>
  </div>
</footer>

