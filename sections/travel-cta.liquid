<section class="travel-cta-section" style="background-image: url('{% if section.settings.background_image %}{{ section.settings.background_image | image_url: width: 2000 }}{% else %}{{ 'cta-bg.png' | asset_url }}{% endif %}');">
  <div class="travel-cta-content">
    <div class="travel-cta-text">
      <h2 class="travel-cta-title">{{ section.settings.title }}</h2>
      <p class="travel-cta-description">
        {{ section.settings.description }}
      </p>
    </div>
    <div class="travel-cta-buttons">
      <a href="{{ section.settings.button_link }}" class="travel-cta-button">{{ section.settings.button_text }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Travel CTA",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "DRK TRAVEL EDITION"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Black-on-black design crafted to turn every journey into a style statement."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "EXPLORE COLLECTION"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ]
}
{% endschema %}

