<div class="top-video-section" style="{% if section.settings.video_width != blank %}width: {{ section.settings.video_width }};{% endif %} {% if section.settings.video_max_width != blank %}max-width: {{ section.settings.video_max_width }};{% endif %} {% if section.settings.video_aspect_ratio != blank %}aspect-ratio: {{ section.settings.video_aspect_ratio }};{% endif %}">
  <video autoplay muted loop playsinline style="{% if section.settings.video_height != blank %}height: {{ section.settings.video_height }};{% endif %} {% if section.settings.video_width != blank %}width: {{ section.settings.video_width }};{% endif %} {% if section.settings.video_aspect_ratio != blank %}aspect-ratio: {{ section.settings.video_aspect_ratio }}; object-fit: cover;{% endif %}">
    {% if section.settings.video_url != blank %}
      <source src="{{ section.settings.video_url }}" type="video/mp4">
    {% else %}
      <source src="{{ 'DRK_video.mp4' | asset_url }}" type="video/mp4">
    {% endif %}
  </video>
  <div class="video-overlay-content" style="{% if section.settings.buttons_left != blank %}left: {{ section.settings.buttons_left }};{% endif %} {% if section.settings.buttons_bottom != blank %}bottom: {{ section.settings.buttons_bottom }};{% endif %}">
    <a href="{{ section.settings.button1_link | default: '#' }}">
      {% if section.settings.button1_image %}
        <img src="{{ section.settings.button1_image | image_url: width: 400 }}" alt="{{ section.settings.button1_alt | default: 'Button 1' }}">
      {% else %}
        <img src="{{ 'DRK_button1.gif' | asset_url }}" alt="{{ section.settings.button1_alt | default: 'Button 1' }}">
      {% endif %}
    </a>
    <a href="{{ section.settings.button2_link | default: '#' }}">
      {% if section.settings.button2_image %}
        <img src="{{ section.settings.button2_image | image_url: width: 400 }}" alt="{{ section.settings.button2_alt | default: 'Button 2' }}">
      {% else %}
        <img src="{{ 'DRK_button2.gif' | asset_url }}" alt="{{ section.settings.button2_alt | default: 'Button 2' }}">
      {% endif %}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Top Video",
  "settings": [
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL",
      "info": "Enter video URL. For assets, use format: {{ 'DRK_video.mp4' | asset_url }} or upload to Files and paste the file URL"
    },
    {
      "type": "header",
      "content": "Video Size Settings"
    },
    {
      "type": "text",
      "id": "video_width",
      "label": "Video Width",
      "info": "Enter width (e.g., '100%', '800px', '50vw')",
      "default": "100%"
    },
    {
      "type": "text",
      "id": "video_max_width",
      "label": "Video Max Width",
      "info": "Enter max width (e.g., '1920px', '100%')"
    },
    {
      "type": "text",
      "id": "video_height",
      "label": "Video Height",
      "info": "Enter height (e.g., '600px', '50vh', 'auto')",
      "default": "auto"
    },
    {
      "type": "text",
      "id": "video_aspect_ratio",
      "label": "Aspect Ratio",
      "info": "Enter aspect ratio (e.g., '16/9', '21/9', '4/3', '1/1'). This will override height.",
      "default": "21/9"
    },
    {
      "type": "header",
      "content": "Button Position"
    },
    {
      "type": "text",
      "id": "buttons_left",
      "label": "Buttons Left Position",
      "info": "Enter left position (e.g., '0', '10%', '50px', '20vw')",
      "default": "0"
    },
    {
      "type": "text",
      "id": "buttons_bottom",
      "label": "Buttons Bottom Position",
      "info": "Enter bottom position (e.g., '30%', '100px', '10vh')",
      "default": "30%"
    },
    {
      "type": "header",
      "content": "Button 1"
    },
    {
      "type": "image_picker",
      "id": "button1_image",
      "label": "Button 1 Image"
    },
    {
      "type": "url",
      "id": "button1_link",
      "label": "Button 1 Link",
      "default": "/collections/essentials"
    },
    {
      "type": "text",
      "id": "button1_alt",
      "label": "Button 1 Alt Text",
      "default": "Button 1"
    },
    {
      "type": "header",
      "content": "Button 2"
    },
    {
      "type": "image_picker",
      "id": "button2_image",
      "label": "Button 2 Image"
    },
    {
      "type": "url",
      "id": "button2_link",
      "label": "Button 2 Link",
      "default": "/collections/new"
    },
    {
      "type": "text",
      "id": "button2_alt",
      "label": "Button 2 Alt Text",
      "default": "Button 2"
    }
  ]
}
{% endschema %}

