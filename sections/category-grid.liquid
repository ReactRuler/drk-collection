<section class="category-grid-section">
  <div class="page-width">
    <div class="category-grid">
      {% for block in section.blocks %}
        <div class="category-card" {{ block.shopify_attributes }}>
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="category-link">
          {% endif %}
          
          <div class="category-card-inner">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url: width: 120 }}" alt="{{ block.settings.text }}" class="category-image">
            {% else %}
              {% case forloop.index %}
                {% when 1 %}
                  <img src="{{ 'fitness.png' | asset_url }}" alt="{{ block.settings.text }}" class="category-image">
                {% when 2 %}
                  <img src="{{ 'drinkware.png' | asset_url }}" alt="{{ block.settings.text }}" class="category-image">
                {% when 3 %}
                  <img src="{{ 'house.png' | asset_url }}" alt="{{ block.settings.text }}" class="category-image">
                {% when 4 %}
                  <img src="{{ 'travel.png' | asset_url }}" alt="{{ block.settings.text }}" class="category-image">
                {% when 5 %}
                  <img src="{{ 'clothes.png' | asset_url }}" alt="{{ block.settings.text }}" class="category-image">
                {% when 6 %}
                  <img src="{{ 'digital.png' | asset_url }}" alt="{{ block.settings.text }}" class="category-image">
                {% when 7 %}
                  <img src="{{ 'office.png' | asset_url }}" alt="{{ block.settings.text }}" class="category-image">
                {% else %}
                  <img src="{{ 'fitness.png' | asset_url }}" alt="{{ block.settings.text }}" class="category-image">
              {% endcase %}
            {% endif %}
            <div class="category-text">
              {{ block.settings.text | default: 'CATEGORY' }}
            </div>
          </div>
          
          {% if block.settings.link != blank %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.category-grid-section {
  background-color: #000000;
  padding: 60px 0;
}

.category-grid {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20px;
  flex-wrap: wrap;
}

.category-card {
  width: 120px;
  position: relative;
}

.category-link {
  display: block;
  width: 100%;
  text-decoration: none;
  color: inherit;
}

.category-card-inner {
  width: 100%;
  border-radius: 36px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  overflow: hidden;
}

.category-image {
  width: 120px;
  height: 120px;
  display: block;
  border-radius: 36px;
  object-fit: contain;
}

.category-text {
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: #D9D9D9;
  text-align: center;
  margin-top: 12px;
  line-height: 1.2;
}

@media (max-width: 768px) {
  .category-grid {
    gap: 15px;
  }
  
  .category-card {
    width: 100px;
  }
  
  .category-card-inner {
    border-radius: 28px;
  }
  
  .category-image {
    width: 100px;
    height: 100px;
    border-radius: 28px;
  }
  
  .category-text {
    font-size: 10px;
    margin-top: 8px;
  }
}
</style>

