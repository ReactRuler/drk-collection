<section class="category-grid-section">
  <div class="page-width">
    <div class="category-grid">
      {% assign default_categories = 'FITNESS,DRINKWARE,HOME,TRAVEL,BASICS,DIGITAL,OFFICE' | split: ',' %}
      {% assign default_links = '/collections/fitness,/collections/drinkware,/collections/home,/collections/travel,/collections/basics,/collections/digital,/collections/office' | split: ',' %}
      {% assign default_images = 'fitness.png,drinkware.png,house.png,travel.png,clothes.png,digital.png,office.png' | split: ',' %}
      
      {% for block in section.blocks %}
        {% assign category_index = forloop.index0 %}
        {% assign default_link = default_links[category_index] %}
        {% assign final_link = block.settings.link | default: default_link %}
        
        <div class="category-card" {{ block.shopify_attributes }}>
          <a href="{{ final_link }}" class="category-link">
            <div class="category-card-inner">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | image_url: width: 120 }}" alt="{{ block.settings.text }}" class="category-image">
              {% else %}
                {% assign default_image = default_images[category_index] %}
                <img src="{{ default_image | asset_url }}" alt="{{ block.settings.text }}" class="category-image">
              {% endif %}
              <div class="category-text">
                {{ block.settings.text | default: default_categories[category_index] }}
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
      
      {% if section.blocks.size == 0 %}
        {% for i in (0..6) %}
          <div class="category-card">
            <a href="{{ default_links[i] }}" class="category-link">
              <div class="category-card-inner">
                <img src="{{ default_images[i] | asset_url }}" alt="{{ default_categories[i] }}" class="category-image">
                <div class="category-text">{{ default_categories[i] }}</div>
              </div>
            </a>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<style>
.category-grid-section {
  background-color: #000000;
  padding: 60px 0;
}

.category-grid {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20px;
  flex-wrap: wrap;
}

.category-card {
  width: 120px;
  position: relative;
}

.category-link {
  display: block;
  width: 100%;
  text-decoration: none;
  color: inherit;
}

.category-card-inner {
  width: 100%;
  border-radius: 36px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  overflow: hidden;
}

.category-image {
  width: 120px;
  height: 120px;
  display: block;
  border-radius: 36px;
  object-fit: contain;
}

.category-text {
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: #D9D9D9;
  text-align: center;
  margin-top: 12px;
  line-height: 1.2;
}

@media (max-width: 768px) {
  .category-grid {
    gap: 15px;
  }
  
  .category-card {
    width: 100px;
  }
  
  .category-card-inner {
    border-radius: 28px;
  }
  
  .category-image {
    width: 100px;
    height: 100px;
    border-radius: 28px;
  }
  
  .category-text {
    font-size: 10px;
    margin-top: 8px;
  }
}
</style>

