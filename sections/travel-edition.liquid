{% comment %}
  DRK Travel Edition Section
{% endcomment %}

<section class="travel-edition" style="background-color: #050505; padding: 100px 20px; position: relative; overflow: hidden;">
  <div class="travel-background" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(rgba(5,5,5,0.6), rgba(5,5,5,0.8)), url('{{ section.settings.background_image | img_url: '1920x1080' }}'); background-size: cover; background-position: center; z-index: 0;">
  </div>
  
  <div class="page-width" style="position: relative; z-index: 1;">
    <div class="travel-content" style="max-width: 600px; margin: 0 auto; text-align: center;">
      <h2 style="color: #D2D2D2; font-size: 56px; font-weight: 300; margin: 0 0 30px; text-transform: uppercase; letter-spacing: 4px;">
        DRK TRAVEL EDITION
      </h2>
      <p style="color: #767676; font-size: 18px; margin: 0 0 40px; line-height: 1.6;">
        Black-on-black design crafted to turn every journey into a style statement.
      </p>
      <a href="{{ section.settings.collection_url | default: '/collections/travel' }}" 
         style="display: inline-block; padding: 15px 40px; border: 1px solid rgba(124,124,124,0.27); border-radius: 23px; background: rgba(124,124,124,0.27); color: #D2D2D2; text-decoration: none; text-transform: uppercase; letter-spacing: 2px; font-size: 14px; transition: all 0.3s;">
        EXPLORE COLLECTION
      </a>
    </div>
  </div>
</section>

<style>
  .travel-edition a:hover {
    background: rgba(124,124,124,0.4) !important;
    border-color: rgba(124,124,124,0.4) !important;
  }
</style>

{% schema %}
{
  "name": "DRK Travel Edition",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "url",
      "id": "collection_url",
      "label": "Collection URL"
    }
  ],
  "presets": [
    {
      "name": "DRK Travel Edition"
    }
  ]
}
{% endschema %}

