<div class="help-center-section">
  <div class="page-width">
    <div class="breadcrumbs">
      <a href="/">Home</a> > <span>Help Center</span>
    </div>
    
    <h1 class="page-title">{{ section.settings.page_title | default: 'HELP CENTER' }}</h1>
    
    <div class="help-content-wrapper">
      <div class="contact-section-wrapper">
        <div class="contact-section">
          <h2 class="section-title">{{ section.settings.contact_title | default: 'How Can We Help You Today?' }}</h2>
          <p class="section-description">{{ section.settings.contact_description | default: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris porta nulla nec libero pulvinar hendrerit. Mauris cursus eros sem, quis vehicula leo hendrerit.' }}</p>
          
          <div class="contact-buttons">
            <a href="{{ section.settings.whatsapp_link | default: '#' }}" class="contact-btn-link">
              <img src="{{ 'whatsapp-btn.png' | asset_url }}" alt="WhatsApp">
            </a>
            <a href="{{ section.settings.email_link | default: 'mailto:support@example.com' }}" class="contact-btn-link">
              <img src="{{ 'mail-btn.png' | asset_url }}" alt="Email">
            </a>
            <a href="{{ section.settings.chat_link | default: '#' }}" class="contact-btn-link">
              <img src="{{ 'chat-btn.png' | asset_url }}" alt="Chat">
            </a>
          </div>
        </div>
      </div>
      
      <div class="faq-section-wrapper">
        <div class="faq-section">
          <h2 class="section-title">{{ section.settings.faq_title | default: 'FAQ' }}</h2>
          <p class="section-description">{{ section.settings.faq_description | default: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris porta nulla nec libero pulvinar hendrerit.' }}</p>
          
          <div class="faq-accordion">
          {% for block in section.blocks %}
            <div class="faq-item" {{ block.shopify_attributes }}>
              <button class="faq-question" onclick="toggleFaq({{ forloop.index0 }})" aria-expanded="{% if forloop.first %}true{% else %}false{% endif %}">
                <span>{{ block.settings.question | default: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit?' }}</span>
                <svg class="faq-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M6 9l6 6 6-6"/>
                </svg>
              </button>
              <div class="faq-answer" id="faq-answer-{{ forloop.index0 }}" style="display: {% if forloop.first %}block{% else %}none{% endif %};">
                <div class="faq-answer-content">
                  {{ block.settings.answer | default: '<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris porta nulla nec libero pulvinar hendrerit. Mauris cursus eros sem, quis vehicula leo hendrerit eu. Sed maximus volutpat sodales. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas.</p>' }}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.help-center-section {
  background: #050505;
  min-height: 100vh;
  padding: 120px 0 80px 0;
  margin-top: 40px;
}

.breadcrumbs {
  font-family: 'Inter', sans-serif;
  font-weight: 300;
  font-size: 14px;
  color: #FFFFFF;
  margin-bottom: 24px;
}

.breadcrumbs a {
  color: #FFFFFF;
  text-decoration: none;
  transition: color 0.3s;
}

.breadcrumbs a:hover {
  color: #B0B0B0;
}

.breadcrumbs span {
  color: #767676;
}

.page-title {
  font-family: 'Inter', sans-serif;
  font-weight: 700;
  font-size: 45px;
  line-height: 50px;
  text-align: center;
  text-transform: uppercase;
  background: linear-gradient(82.13deg, #A2A2A2 2.11%, #191919 50.06%, #797979 98%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-fill-color: transparent;
  margin: 0 0 60px 0;
  flex: none;
  order: 0;
  align-self: stretch;
  flex-grow: 0;
}

.help-content-wrapper {
  max-width: 900px;
  margin: 0 auto;
  padding: 0 20px;
}

.contact-section-wrapper,
.faq-section-wrapper {
  margin-bottom: 40px;
}

.contact-section,
.faq-section {
  background: #0B0B0B;
  border-radius: 10px;
  padding: 40px;
}

.section-title {
  font-family: 'Inter', sans-serif;
  font-weight: 700;
  font-size: 32px;
  line-height: 40px;
  color: #FFFFFF;
  margin: 0 0 16px 0;
  text-transform: uppercase;
}

.section-description {
  font-family: 'Inter', sans-serif;
  font-weight: 300;
  font-size: 16px;
  line-height: 24px;
  color: #B0B0B0;
  margin: 0 0 32px 0;
}

.contact-buttons {
  display: flex;
  gap: 24px;
  flex-wrap: wrap;
}

.contact-btn-link {
  flex: 1;
  min-width: 200px;
  display: block;
  transition: transform 0.3s, opacity 0.3s;
}

.contact-btn-link:hover {
  transform: translateY(-2px);
  opacity: 0.9;
}

.contact-btn-link img {
  width: 100%;
  height: auto;
  display: block;
  object-fit: contain;
}

.faq-accordion {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.faq-item {
  border-bottom: 1px solid rgba(140, 140, 140, 0.2);
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-question {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24px 0;
  background: none;
  border: none;
  color: #FFFFFF;
  font-family: 'Inter', sans-serif;
  font-weight: 500;
  font-size: 18px;
  line-height: 24px;
  text-align: left;
  cursor: pointer;
  transition: color 0.3s;
}

.faq-question:hover {
  color: #B0B0B0;
}

.faq-icon {
  flex-shrink: 0;
  margin-left: 16px;
  transition: transform 0.3s;
  color: #FFFFFF;
}

.faq-question[aria-expanded="true"] .faq-icon {
  transform: rotate(180deg);
}

.faq-answer {
  padding-bottom: 24px;
  overflow: hidden;
}

.faq-answer-content {
  font-family: 'Inter', sans-serif;
  font-weight: 300;
  font-size: 16px;
  line-height: 24px;
  color: #B0B0B0;
}

.faq-answer-content p {
  margin: 0 0 16px 0;
}

.faq-answer-content p:last-child {
  margin-bottom: 0;
}

@media (max-width: 768px) {
  .help-center-section {
    padding: 100px 0 60px 0;
    margin-top: 60px;
  }

  .page-title {
    font-size: 36px;
    line-height: 40px;
    margin-bottom: 40px;
  }

  .section-title {
    font-size: 24px;
    line-height: 32px;
  }

  .contact-section,
  .faq-section {
    padding: 24px;
  }

  .contact-buttons {
    flex-direction: column;
  }

  .contact-btn-link {
    width: 100%;
  }

  .faq-question {
    font-size: 16px;
    padding: 20px 0;
  }
}
</style>

<script>
function toggleFaq(index) {
  const answer = document.getElementById('faq-answer-' + index);
  const question = event.currentTarget;
  const isExpanded = question.getAttribute('aria-expanded') === 'true';
  
  if (isExpanded) {
    answer.style.display = 'none';
    question.setAttribute('aria-expanded', 'false');
  } else {
    answer.style.display = 'block';
    question.setAttribute('aria-expanded', 'true');
  }
}
</script>

