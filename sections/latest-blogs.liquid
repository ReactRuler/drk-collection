{% comment %}
  Latest Blogs Section
{% endcomment %}

<section class="latest-blogs" style="background-color: #050505; padding: 100px 20px;">
  <div class="page-width">
    <div class="section-header" style="text-align: center; margin-bottom: 60px;">
      <h2 style="color: #D2D2D2; font-size: 48px; font-weight: 300; margin: 0; text-transform: uppercase; letter-spacing: 3px;">
        LATEST BLOGS
      </h2>
    </div>

    <div class="blogs-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 40px; max-width: 1400px; margin: 0 auto;">
      {% if section.settings.blog != blank %}
        {% for article in blogs[section.settings.blog].articles limit: section.settings.posts_to_show %}
          <article class="blog-card" style="background: rgba(255,255,255,0.02); border-radius: 10px; overflow: hidden; border: 1px solid rgba(125,125,125,0.5);">
            <a href="{{ article.url }}" style="text-decoration: none; color: inherit;">
              <div class="blog-image" style="position: relative; background: #141414; aspect-ratio: 16/9; overflow: hidden;">
                {% if article.image %}
                  <img src="{{ article.image | img_url: '800x450' }}" 
                       alt="{{ article.title }}" 
                       style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s;">
                {% else %}
                  <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #767676;">
                    No Image
                  </div>
                {% endif %}
              </div>
              <div class="blog-content" style="padding: 30px;">
                <div class="blog-date" style="color: #767676; font-size: 12px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 15px;">
                  {{ article.published_at | date: "%B %d, %Y" | upcase }}
                </div>
                <h3 class="blog-title" style="color: #D2D2D2; font-size: 24px; font-weight: 300; margin: 0 0 15px; text-transform: uppercase; letter-spacing: 1px;">
                  {{ article.title }}
                </h3>
                <p class="blog-excerpt" style="color: #767676; font-size: 14px; line-height: 1.6; margin: 0 0 20px;">
                  {{ article.excerpt | strip_html | truncate: 120 }}
                </p>
                <div class="read-more" style="color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; display: inline-flex; align-items: center; gap: 10px;">
                  Read More
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </div>
              </div>
            </a>
          </article>
        {% endfor %}
      {% else %}
        {% for i in (1..3) %}
          <article class="blog-card" style="background: rgba(255,255,255,0.02); border-radius: 10px; overflow: hidden; border: 1px solid rgba(125,125,125,0.5);">
            <div class="blog-image" style="position: relative; background: #141414; aspect-ratio: 16/9; overflow: hidden;">
              <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #767676;">
                Blog Image {{ i }}
              </div>
            </div>
            <div class="blog-content" style="padding: 30px;">
              <div class="blog-date" style="color: #767676; font-size: 12px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 15px;">
                SEPTEMBER 20, 2023
              </div>
              <h3 class="blog-title" style="color: #D2D2D2; font-size: 24px; font-weight: 300; margin: 0 0 15px; text-transform: uppercase; letter-spacing: 1px;">
                {% if i == 1 %}Black Takes Flight{% elsif i == 2 %}Shadows of Luxury{% else %}The Future is Black{% endif %}
              </h3>
              <p class="blog-excerpt" style="color: #767676; font-size: 14px; line-height: 1.6; margin: 0 0 20px;">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
              </p>
              <div class="read-more" style="color: #D2D2D2; font-size: 14px; text-transform: uppercase; letter-spacing: 1px; display: inline-flex; align-items: center; gap: 10px; cursor: pointer;">
                Read More
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </article>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<style>
  .blog-card:hover .blog-image img {
    transform: scale(1.05);
  }
  .blog-card:hover .read-more {
    color: #D2D2D2;
  }
  .blog-card:hover {
    border-color: rgba(125,125,125,0.8) !important;
  }
</style>

{% schema %}
{
  "name": "Latest Blogs",
  "settings": [
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "range",
      "id": "posts_to_show",
      "label": "Posts to show",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3
    }
  ],
  "presets": [
    {
      "name": "Latest Blogs"
    }
  ]
}
{% endschema %}

